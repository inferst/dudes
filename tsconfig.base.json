{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "useUnknownInCatchVariables": false,
    "baseUrl": ".",
    "paths": {
      "@app/backend-api/*": [
        "apps/backend-api/src/*"
      ],
      "@app/frontend-admin/*": [
        "apps/frontend-admin/src/*"
      ],
      "@app/frontend-client/*": [
        "apps/frontend-client/src/*"
      ],
      "@lib/types": [
        "libs/types/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
