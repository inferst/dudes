{
  "name": "@repo/database",
  "version": "1.0.0",
  "main": "./src/client.ts",
  "types": "./src/client.ts",
  "exports": {
    ".": {
      "types": "./src/client.ts",
      "default": "./dist/client.js"
    }
  },
  "scripts": {
    "build": "tsup src/*",
    "dev": "tsup src/* --watch",
    "prebuild": "pnpm run generate",
    "predev": "pnpm run generate",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:seed": "tsx src/seed/seed.ts",
    "generate": "prisma generate"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.15.17",
    "eslint": "9.26.0",
    "prisma": "latest",
    "prisma-json-types-generator": "3.2.3",
    "rimraf": "6.0.1",
    "tsup": "8.4.0",
    "tsx": "4.19.4",
    "typescript": "5.8.3"
  },
  "dependencies": {
    "@prisma/client": "6.7.0",
    "zod": "3.24.4"
  }
}
