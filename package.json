{
  "name": "dudes",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "generate": "turbo run generate",
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "db:generate": "prisma generate --schema=apps/backend-api/prisma/schema.prisma",
    "db:migrate:dev": "prisma migrate dev --schema=apps/backend-api/prisma/schema.prisma",
    "db:migrate:deploy": "prisma migrate deploy --schema=apps/backend-api/prisma/schema.prisma",
    "db:seed": "prisma db seed --schema=apps/backend-api/prisma/schema.prisma",
    "i18n:admin": "i18next-scanner --output locales 'apps/frontend-admin/src/**/*.{ts,tsx}'",
    "i18n:website": "i18next-scanner --output locales 'apps/website/src/**/*.{ts,tsx}'"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} apps/backend-api/src/database/seed/seed.ts"
  },
  "devDependencies": {
    "turbo": "^2.5.0",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "pnpm": {
    "neverBuiltDependencies": []
  }
}
